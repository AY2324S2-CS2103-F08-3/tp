<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane id="nameCard" fx:id="nameCard" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          HBox.hgrow="ALWAYS">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10"/>
    </columnConstraints>
    <HBox alignment="CENTER_LEFT" minHeight="-Infinity" GridPane.columnIndex="0" >
        <padding>
            <Insets top="5" right="5" bottom="5" left="15"/>
        </padding>
        <Label fx:id="id" styleClass="cell_small_label" text="\$id"/>
        <Label fx:id="name" styleClass="cell_small_label" text="\$name"/>
    </HBox>
</GridPane>

