@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":StaffConnectParser" as StaffConnectParser LOGIC_COLOR
participant ":MarkCommandParser" as MarkCommandParser LOGIC_COLOR
participant "<<class>>\nParserUtil" as ParserUtil LOGIC_COLOR
participant "d:MarkCommand" as MarkCommand LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":ModelManager" as Model MODEL_COLOR
participant ":Person" as Person MODEL_COLOR
end box

[-> LogicManager : execute(userInput)
activate LogicManager

LogicManager -> StaffConnectParser : parseCommand(userInput)
activate StaffConnectParser

create MarkCommandParser
StaffConnectParser -> MarkCommandParser
activate MarkCommandParser

MarkCommandParser --> StaffConnectParser
deactivate MarkCommandParser

StaffConnectParser -> MarkCommandParser : parse(args)
activate MarkCommandParser

MarkCommandParser -> ParserUtil : parseIndex(oneBasedIndex)
activate ParserUtil
return

create MarkCommand
MarkCommandParser -> MarkCommand++
return

return m
destroy MarkCommandParser
return m

LogicManager -> MarkCommand : execute(model)
activate MarkCommand

MarkCommand -> Model : getFilteredPersonList()
activate Model
return

create Person
MarkCommand -> Person++
return markedPerson

MarkCommand -> Model : setPerson(personToMark, markedPerson)
activate Model
return

MarkCommand -> Model : updateFilteredPersonList(PREDICATE_SHOW_ALL_PERSONS)
activate Model
return

create CommandResult
MarkCommand -> CommandResult++
return

return r
return

@enduml
